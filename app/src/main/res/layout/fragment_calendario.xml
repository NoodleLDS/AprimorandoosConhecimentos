<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.calendario.CalendarioFragment">

    <LinearLayout
        android:id="@+id/pdf_cefores"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fadingEdge="horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/cefores" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/botao_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:fontFamily="@font/fontes"
                android:text="Visualizar"
                android:textAppearance="@style/Widget.Theme.Aprimorando.BotoesPdf"
                android:textSize="14sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fontes"
                android:text="Baixar"
                android:textAppearance="@style/Widget.Theme.Aprimorando.BotoesPdf"
                android:textSize="14sp"
                android:typeface="normal" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pdf_pedagogia"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fadingEdge="horizontal"
        android:orientation="horizontal"    >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pedagogia_ead" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/botao_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:fontFamily="@font/fontes"
                android:text="Visualizar"
                android:textAppearance="@style/Widget.Theme.Aprimorando.BotoesPdf"
                android:textSize="14sp"
                android:typeface="normal" />
            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/fontes"
                android:text="Baixar"
                android:textAppearance="@style/Widget.Theme.Aprimorando.BotoesPdf"
                android:textSize="14sp"
                android:typeface="normal" />
        </LinearLayout>


    </LinearLayout>

</GridLayout>



