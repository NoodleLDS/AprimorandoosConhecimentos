<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aprimorando" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- aqui esta indo pro meno default a direita -->
        <item name="android:itemTextAppearance">@style/TextosMenu</item>
    </style>

    <style name="TextosMenu" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="fontFamily">@font/latoregular</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="TextosBotaoPdf" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="fontFamily">@font/latothin</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="Theme.Aprimorando.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- aqui esta indo pro meno default a direita -->
        <item name="android:itemTextAppearance">@style/TextosMenu</item>
    </style>

    <style name="Theme.Aprimorando.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- aqui esta indo pro meno default a direita -->
        <item name="android:itemTextAppearance">@style/TextosMenu</item>
    </style>

    <style name="Theme.Aprimorando.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- aqui esta indo pro meno default a direita -->
        <item name="android:itemTextAppearance">@style/TextosMenu</item>

    </style>
</resources>